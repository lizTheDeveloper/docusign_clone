# Application
APP_NAME=DocuSign Clone
APP_ENV=development
DEBUG=True
API_VERSION=v1
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/docusign_clone
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@docusign-clone.com
SMTP_FROM_NAME=DocuSign Clone

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12
VERIFICATION_TOKEN_EXPIRE_HOURS=24
RESET_TOKEN_EXPIRE_HOURS=1
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# S3 Storage
S3_BUCKET_NAME=docusign-clone-documents
S3_REGION=us-east-1
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_ENDPOINT_URL=  # Optional, for S3-compatible services like MinIO
S3_PRESIGNED_URL_EXPIRATION=3600  # 1 hour in seconds
